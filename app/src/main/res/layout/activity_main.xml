<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center_horizontal"
    android:background="@drawable/golira">

    <!-- MongoDB 接続ボタン -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnMongoDBConnect"
        style="@style/SupernovaButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Connect to Mongo DB"
        android:layout_marginBottom="10dp" />

    <!-- 温度・湿度カードの include -->
    <include
        layout="@layout/sensor_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <!-- 更新日時カードの include -->
    <include
        layout="@layout/updated_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <!-- ボタン系カード(LED, Motion, Fire, Alarm)の include -->
    <include
        layout="@layout/button_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <!-- チェックヒストリーボタン -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnGoToSecond"
        style="@style/SupernovaButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="History"
        android:layout_marginTop="8dp" />


</LinearLayout>
