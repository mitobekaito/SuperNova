<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center_horizontal"
    android:background="@color/white"> <!-- ✅ 白色の背景に変更 -->

    <!-- 温度・湿度カードの include -->
    <include
        layout="@layout/sensor_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <!-- 更新日時カードの include -->
    <include
        layout="@layout/updated_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <!-- ボタン系カード(LED, Motion, Fire, Alarm)の include -->
    <include
        layout="@layout/button_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <!-- Supernova ボタン -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnsupernova"
        style="@style/SupernovaButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Supernova"
        android:layout_marginBottom="10dp" />

    <!-- ボタンを横並びに配置する LinearLayout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="8dp">

        <!-- チェックヒストリーボタン -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnGoToSecond"
            style="@style/SupernovaButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="History"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"/> <!-- ボタン間の余白を設定 -->

        <!-- リセットボタン -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnRESET"
            style="@style/SupernovaButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Reset"
            android:layout_weight="1"/>
    </LinearLayout>



</LinearLayout>
