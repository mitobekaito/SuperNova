<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootFrame"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- 回転用のグラデーション背景を表示するImageView -->
    <ImageView
        android:id="@+id/imgBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/gradient_background"
        android:scaleType="fitXY" />

    <!-- 星のカスタムView -->
    <supernova.ui.StarFieldView
        android:id="@+id/starFieldView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


    <!-- ボタンを横並びに配置する LinearLayout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center_horizontal"
        android:background="@android:color/transparent">

        <!-- 温度・湿度カードの include -->
        <include
            layout="@layout/sensor_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- 更新日時カードの include -->
        <include
            layout="@layout/updated_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- ボタン系カード(LED, Motion, Fire, Alarm)の include -->
        <include
            layout="@layout/button_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Supernova ボタン -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSupernova"
            style="@style/SupernovaGradientButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Supernova"
            android:backgroundTint="@null"
            android:layout_marginTop="10dp" />

        <!-- ボタンを横並びに配置する LinearLayout -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="8dp">

            <!-- チェックヒストリーボタン -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnGoToSecond"
                style="@style/SupernovaGradientButtonStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="History" />

            <!-- リセットボタン -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnReset"
                style="@style/SupernovaGradientButtonStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Reset" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
