<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <!-- LED トグルスイッチ -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:layout_marginBottom="20dp"
        app:cardCornerRadius="18dp"
        app:cardElevation="8dp"
        android:backgroundTint="@color/supernovaCardBackground"
        app:strokeColor="@color/supernovaAccent"
        app:strokeWidth="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="150dp"
                android:text="LED"
                android:textColor="@color/purple_200"
                android:fontFamily="@font/custom_griffy"
                android:textSize="22sp"
                android:textStyle="bold"
                android:gravity="center_vertical"/>

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/switchLED"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Motion Detected トグルスイッチ -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:layout_marginBottom="20dp"
        app:cardCornerRadius="18dp"
        app:cardElevation="8dp"
        android:backgroundTint="@color/supernovaCardBackground"
        app:strokeColor="@color/supernovaAccent"
        app:strokeWidth="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="100dp"
                android:text="Motion Detected"
                android:textColor="@color/purple_200"
                android:fontFamily="@font/custom_griffy"
                android:textSize="22sp"
                android:textStyle="bold"
                android:gravity="center_vertical"/>

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/switchMotion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Fire Detected トグルスイッチ -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:layout_marginBottom="20dp"
        app:cardCornerRadius="18dp"
        app:cardElevation="8dp"
        android:backgroundTint="@color/supernovaCardBackground"
        app:strokeColor="@color/supernovaAccent"
        app:strokeWidth="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="110dp"
                android:text="Fire Detected"
                android:textColor="@color/purple_200"
                android:fontFamily="@font/custom_griffy"
                android:textSize="22sp"
                android:textStyle="bold"
                android:gravity="center_vertical"/>

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/switchFire"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</LinearLayout>
