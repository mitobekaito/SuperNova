{
  "compilerOptions": {
    /* 言語と環境設定 */
    "target": "ES6",                                 /* 出力する JavaScript のバージョン */
    "module": "Node16",                              /* モジュールシステムを Node16 に設定（Node.js 向け） */
    "lib": ["ES6"],                                  /* 使用するライブラリ（ES6 を指定） */
    "rootDir": "./src",                              /* TypeScript のソースコードを格納するディレクトリ */
    "outDir": "./dist",                              /* コンパイルされた JavaScript の出力先 */

    /* モジュール解決 */
    "moduleResolution": "node16",                    /* Node.js 16 のモジュール解決を使用 */
    "resolveJsonModule": true,                       /* .json ファイルを import 可能にする */
    "allowSyntheticDefaultImports": true,            /* デフォルトエクスポートのないモジュールでも `import x from "..."` を許可 */
    "esModuleInterop": true,                         /* CommonJS と ES6 の互換性を確保 */

    /* 型チェックと開発サポート */
    "strict": true,                                  /* 厳格な型チェックを有効化 */
    "noImplicitAny": true,                           /* 暗黙的な any 型を許可しない */
    "strictNullChecks": true,                        /* null および undefined の厳格な型チェックを有効化 */
    "forceConsistentCasingInFileNames": true,        /* ファイル名の大文字・小文字を厳密に区別 */
    "skipLibCheck": true,                            /* 外部ライブラリの型チェックをスキップ（ビルド高速化のため） */

    /* コンパイルオプション */
    "sourceMap": true,                               /* JavaScript ファイルのデバッグ用に SourceMap を出力 */
    "removeComments": true,                          /* コンパイル時にコメントを削除 */
    "strictPropertyInitialization": false,           /* クラスのプロパティの初期化チェックを無効化 */
    "noImplicitReturns": true,                       /* すべての関数が明示的に return することを要求 */
    "noFallthroughCasesInSwitch": true,              /* switch 文の fallthrough を禁止 */

    /* Node.js 用の設定 */
    "allowJs": false,                                /* JavaScript ファイルのコンパイルを無効化（TypeScript のみを使用） */
    "resolvePackageJsonExports": true,               /* package.json の `exports` を使用してモジュールを解決 */
    "resolvePackageJsonImports": true                /* package.json の `imports` を使用してモジュールを解決 */
  },
  "include": ["src"],                                /* TypeScript のコンパイル対象ディレクトリ */
  "exclude": ["node_modules", "dist"]               /* コンパイル対象から除外するフォルダ */
}
